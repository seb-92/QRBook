<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="370.0" prefWidth="499.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.libraryclienttcp.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Dane osoby wypożyczającej">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font></Label>
      <Label fx:id="firstNameLabel" text="Imię : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label fx:id="lastNameLabel" text="Nazwisko : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label fx:id="addressLabel" text="Adres : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label fx:id="titleLabel" text="Tytuł książki : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="authorLabel" text="Autor książki : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="publishYearLabel" text="Rok publikacji książki : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="orderTypeLabel" text="Typ zamówienia : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="bookIdLabel" text="Id książki : ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Button fx:id="acceptButton" alignment="CENTER" disable="true" layoutX="14.0" layoutY="2.0" mnemonicParsing="false" onAction="#confirmOrder" prefHeight="25.0" prefWidth="200.0" text="Zaakceptuj" textAlignment="CENTER" />
            <Button fx:id="rejectButton" disable="true" layoutX="245.0" layoutY="2.0" mnemonicParsing="false" onAction="#rejectOrder" prefHeight="25.0" prefWidth="200.0" text="Odrzuć" />
         </children>
      </AnchorPane>
   </children>
</VBox>
